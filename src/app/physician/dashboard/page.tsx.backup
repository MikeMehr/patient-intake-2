"use client";

import { useEffect, useState } from "react";
import { useRouter } from "next/navigation";
import { signIn, signOut, useSession } from "next-auth/react";
import type { HistoryResponse } from "@/lib/history-schema";
import type { PatientProfile } from "@/lib/interview-schema";

interface PatientSession {
  sessionCode: string;
  patientEmail: string;
  patientName: string;
  chiefComplaint: string;
  patientProfile: PatientProfile;
  history: HistoryResponse;
  completedAt: string;
  viewedByPhysician: boolean;
  viewedAt?: string;
  imageSummary?: string;
  imageUrl?: string;
  imageName?: string;
}

export default function PhysicianDashboard() {
  const router = useRouter();
  const { data: authSession, status: authStatus } = useSession();
  const [sessions, setSessions] = useState<PatientSession[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState<string | null>(null);

  // Require authentication
  useEffect(() => {
    if (authStatus === "unauthenticated") {
      signIn("google", { callbackUrl: "/physician/dashboard" });
    }
  }, [authStatus]);

  // Fetch sessions
  useEffect(() => {
    if (authStatus !== "authenticated") {
      return;
    }

    fetch("/api/sessions/list")
      .then((res) => {
        if (res.status === 401) {
          throw new Error("Authentication required");
        }
        if (!res.ok) {
          throw new Error("Failed to fetch sessions");
        }
        return res.json();
      })
      .then((data) => {
        setSessions(data.sessions || []);
        setLoading(false);
      })
      .catch((err) => {
        setError(err.message);
        setLoading(false);
      });
  }, [authStatus]);

  if (authStatus === "loading" || loading) {
    return (
      <div className="flex min-h-screen items-center justify-center bg-slate-100">
        <div className="text-center">
          <p className="text-slate-600">
            {authStatus === "loading" ? "Authenticating..." : "Loading sessions..."}
          </p>
        </div>
      </div>
    );
  }

  if (authStatus === "unauthenticated") {
    return (
      <div className="flex min-h-screen items-center justify-center bg-slate-100">
        <div className="text-center">
          <p className="text-slate-600">Please sign in to view patient sessions.</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-slate-100 py-10 px-4">
      <div className="mx-auto max-w-6xl">
        <div className="rounded-3xl border border-slate-200 bg-white shadow-xl">
          <header className="border-b border-slate-200 px-8 py-6 flex justify-between items-center">
            <div>
              <h1 className="text-3xl font-semibold text-slate-900">
                Patient Intake Dashboard
              </h1>
              {authSession?.user && (
                <p className="mt-2 text-sm text-slate-600">
                  Signed in as: {authSession.user.email}
                </p>
              )}
            </div>
            <button
              onClick={() => signOut({ callbackUrl: "/" })}
              className="px-4 py-2 text-sm font-medium text-slate-700 bg-slate-100 rounded-lg hover:bg-slate-200"
            >
              Sign Out
            </button>
          </header>

          <div className="px-8 py-6">
            {error && (
              <div className="mb-6 rounded-xl bg-red-50 border border-red-200 px-4 py-3">
                <p className="text-red-800">{error}</p>
              </div>
            )}

            {sessions.length === 0 ? (
              <div className="text-center py-12">
                <p className="text-slate-600">No patient sessions available.</p>
                <p className="mt-2 text-sm text-slate-500">
                  Sessions will appear here once patients complete their intake forms.
                </p>
              </div>
            ) : (
              <div className="space-y-4">
                <div className="mb-4">
                  <p className="text-sm text-slate-600">
                    {sessions.length} session{sessions.length !== 1 ? "s" : ""} found
                  </p>
                </div>
                <div className="grid gap-4">
                  {sessions.map((session) => (
                    <div
                      key={session.sessionCode}
                      className="border border-slate-200 rounded-xl p-6 hover:shadow-md transition-shadow bg-white"
                    >
                      <div className="flex justify-between items-start">
                        <div className="flex-1">
                          <div className="flex items-center gap-3 mb-2">
                            <h3 className="text-lg font-semibold text-slate-900">
                              {session.patientName}
                            </h3>
                            {session.viewedByPhysician && (
                              <span className="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded">
                                Viewed
                              </span>
                            )}
                            {session.imageUrl && (
                              <span className="px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded">
                                Has Image
                              </span>
                            )}
                          </div>
                          <p className="text-sm text-slate-600 mb-1">
                            <strong>Email:</strong> {session.patientEmail}
                          </p>
                          <p className="text-sm text-slate-600 mb-1">
                            <strong>Chief Complaint:</strong> {session.chiefComplaint}
                          </p>
                          <p className="text-sm text-slate-500">
                            Completed: {new Date(session.completedAt).toLocaleString()}
                          </p>
                          {session.viewedAt && (
                            <p className="text-sm text-slate-500">
                              Viewed: {new Date(session.viewedAt).toLocaleString()}
                            </p>
                          )}
                        </div>
                        <button
                          onClick={() => router.push(`/physician/view?code=${session.sessionCode}`)}
                          className="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700"
                        >
                          View Details
                        </button>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  );
}

